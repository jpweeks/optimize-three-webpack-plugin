{
  "name": "@vxna/optimize-three-webpack-plugin",
  "version": "0.0.0-development",
  "description": "A compat layer that enables tree shaking with JSM imports",
  "author": "vxna",
  "license": "MIT",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vxna/optimize-three-webpack-plugin.git"
  },
  "keywords": [
    "webpack",
    "plugin",
    "three"
  ],
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "pretest": "yarn lint",
    "test": "yarn test:jest",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest": "yarn format",
    "lint": "eslint . --cache --fix",
    "format": "prettier --write **/*.{js,md}"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-tamia": "^6.0.2",
    "file-loader": "^3.0.1",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "memory-fs": "^0.4.1",
    "prettier": "^1.17.0",
    "three": "^0.104.0",
    "webpack": "^4.30.0"
  },
  "eslintConfig": {
    "extends": "tamia"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
